@model inventoryManagementSystem.Models.supplier


@{
    ViewBag.Title = "DeleteSupplier";
}

<h2>DeleteSupplier</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>supplier</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Supplier name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplier_name)
        </dd>

        <dt>
            @Html.DisplayName("Supplier number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.number)
        </dd>

        <dt>
            @Html.DisplayName("Supplier email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Cancel", "DisplaySupplier", "Supplier", new { @class = "btn btn-primary" })
    </div>
    }
</div>
